<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- A CardView that contains a TextView -->



    <android.support.v7.widget.CardView
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
android:layout_gravity="center"
android:layout_width="match_parent"
android:layout_height="200dp"
card_view:cardCornerRadius="4dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/post_content"
    android:layout_width="match_parent"
    android:text="content"
    android:layout_height="match_parent" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#262626"
    android:layout_alignParentBottom="true">
    <ImageView
        android:id="@+id/like"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_sentiment_very_satisfied_white_48dp"/>
    <ImageView
        android:id="@+id/dislike"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/like"
        android:src="@drawable/ic_sentiment_very_dissatisfied_white_48dp"/>
    <ImageView
        android:id="@+id/comment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/dislike"
        android:src="@drawable/ic_mode_comment_white_48dp"/>
</RelativeLayout>
</RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>