<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- A CardView that contains a TextView -->



    <android.support.v7.widget.CardView
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
android:layout_gravity="center"
android:layout_width="match_parent"
android:layout_height="200dp"
card_view:cardCornerRadius="4dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_person_black_48dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>
    <TextView
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:text="Fullname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left|center"
        android:textSize="18sp"
        android:layout_toRightOf="@id/profile_image"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_alignParentTop="true" />
<TextView
    android:id="@+id/post_content"
    android:layout_width="match_parent"
    android:text="content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_below="@id/profile_image"
    android:layout_height="match_parent"
    android:layout_above="@+id/buttons" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#262626"
    android:id="@+id/buttons"
    android:layout_alignParentBottom="true">
    <ImageView
        android:id="@+id/like"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"

        android:src="@drawable/ic_sentiment_very_satisfied_white_48dp"/>
    <TextView
        android:id="@+id/like_count"
        android:layout_width="wrap_content"
        android:text="178"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_toRightOf="@id/like"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />
    <ImageView
        android:id="@+id/dislike"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/like_count"
        android:src="@drawable/ic_sentiment_very_dissatisfied_white_48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/dislike_count"
        android:layout_width="wrap_content"
        android:text="46"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_toRightOf="@id/dislike"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />
    <ImageView
        android:id="@+id/comment"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/dislike_count"
        android:src="@drawable/ic_mode_comment_white_48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        android:text="15"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_toRightOf="@id/comment"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>
</RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>